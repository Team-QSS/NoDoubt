#version 430 core

in DATA
{
	vec4 c;
	vec2 tc;
} fs_in;

uniform sampler2D tex;
out vec4 color;

void main(void)
{
	vec4 fc = fs_in.c;
	color = texture(tex, fs_in.tc);
	
	if(fc.w > 0.5f) {
		color.xyz = fc.xyz;
		color.xyz = color.xyz * fc.x;
	}
	
	if(color.a < 0.05f) {
		discard;
	}
}